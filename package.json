{
  "name": "nuxt-crouton-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Nuxt Crouton - Reusable CRUD layers for Nuxt 3",
  "keywords": [
    "nuxt",
    "nuxt-layer",
    "crud",
    "scaffolding",
    "translations",
    "i18n"
  ],
  "author": "FYIT",
  "license": "MIT",
  "homepage": "https://github.com/pmcp/nuxt-crouton",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmcp/nuxt-crouton.git"
  },
  "bugs": {
    "url": "https://github.com/pmcp/nuxt-crouton/issues"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "pnpm -r build",
    "build:packages": "pnpm -r --filter './packages/*' build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "pnpm -r --filter './apps/*' typecheck",
    "typecheck:mcp": "pnpm --filter nuxt-crouton-mcp-server typecheck",
    "publish:packages": "./scripts/publish-packages.sh",
    "publish:packages:dry": "./scripts/publish-packages.sh --dry-run",
    "publish:packages:skip-build": "./scripts/publish-packages.sh --skip-build",
    "version:patch": "pnpm -r exec npm version patch --no-git-tag-version",
    "version:minor": "pnpm -r exec npm version minor --no-git-tag-version",
    "version:major": "pnpm -r exec npm version major --no-git-tag-version",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules",
    "changelog": "changelogithub",
    "check:publint": "publint ./packages/crouton",
    "check:attw": "attw --pack ./packages/crouton --ignore-rules cjs-resolves-to-esm"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@nuxt/eslint-config": "^1.2.0",
    "@nuxt/test-utils": "^3.23.0",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "changelogithub": "^14.0.0",
    "eslint": "^9.17.0",
    "happy-dom": "^20.3.3",
    "nuxt": "^4.0.0",
    "publint": "^0.3.16",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "overrides": {
      "vue": "^3.5.13",
      "nuxt": "^4.0.0",
      "unimport": "4.1.1",
      "zod": "4.2.1"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ],
    "ignoredBuiltDependencies": [
      "@prisma/client",
      "es5-ext",
      "esbuild",
      "sharp",
      "unrs-resolver",
      "vue-demi"
    ]
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
}
