{
  "name": "nuxt-crouton-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Nuxt Crouton - Reusable CRUD layers for Nuxt 3",
  "keywords": [
    "nuxt",
    "nuxt-layer",
    "crud",
    "scaffolding",
    "translations",
    "i18n"
  ],
  "author": "FYIT",
  "license": "MIT",
  "homepage": "https://github.com/pmcp/nuxt-crouton",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmcp/nuxt-crouton.git"
  },
  "bugs": {
    "url": "https://github.com/pmcp/nuxt-crouton/issues"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:apps": "pnpm -r --filter './apps/*' lint",
    "lint:packages": "eslint packages/",
    "build": "pnpm -r build",
    "build:packages": "pnpm -r --filter './packages/*' build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "pnpm -r --filter './apps/*' typecheck",
    "typecheck:mcp": "pnpm --filter nuxt-crouton-mcp-server typecheck",
    "publish:all": "pnpm -r publish --access public",
    "publish:dry": "pnpm -r publish --dry-run",
    "version:patch": "pnpm -r exec npm version patch --no-git-tag-version",
    "version:minor": "pnpm -r exec npm version minor --no-git-tag-version",
    "version:major": "pnpm -r exec npm version major --no-git-tag-version",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.2.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.17.0",
    "nuxt": "^4.0.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "overrides": {
      "vue": "^3.5.13",
      "nuxt": "^4.0.0",
      "unimport": "4.1.1",
      "zod": "4.2.1",
      "@tiptap/core": "3.13.0",
      "@tiptap/pm": "3.13.0",
      "@tiptap/starter-kit": "3.13.0",
      "@tiptap/vue-3": "3.13.0",
      "@tiptap/extension-blockquote": "3.13.0",
      "@tiptap/extension-bold": "3.13.0",
      "@tiptap/extension-bullet-list": "3.13.0",
      "@tiptap/extension-code": "3.13.0",
      "@tiptap/extension-code-block": "3.13.0",
      "@tiptap/extension-document": "3.13.0",
      "@tiptap/extension-dropcursor": "3.13.0",
      "@tiptap/extension-gapcursor": "3.13.0",
      "@tiptap/extension-hard-break": "3.13.0",
      "@tiptap/extension-heading": "3.13.0",
      "@tiptap/extension-horizontal-rule": "3.13.0",
      "@tiptap/extension-image": "3.13.0",
      "@tiptap/extension-italic": "3.13.0",
      "@tiptap/extension-link": "3.13.0",
      "@tiptap/extension-list": "3.13.0",
      "@tiptap/extension-list-item": "3.13.0",
      "@tiptap/extension-list-keymap": "3.13.0",
      "@tiptap/extension-mention": "3.13.0",
      "@tiptap/extension-ordered-list": "3.13.0",
      "@tiptap/extension-paragraph": "3.13.0",
      "@tiptap/extension-placeholder": "3.13.0",
      "@tiptap/extension-strike": "3.13.0",
      "@tiptap/extension-text": "3.13.0",
      "@tiptap/extension-underline": "3.13.0",
      "@tiptap/extensions": "3.13.0",
      "@tiptap/markdown": "3.13.0",
      "@tiptap/suggestion": "3.13.0"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ],
    "ignoredBuiltDependencies": [
      "@prisma/client",
      "es5-ext",
      "esbuild",
      "sharp",
      "unrs-resolver",
      "vue-demi"
    ]
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
}
