{
  "extends": "../../.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.vue",
    "server/**/*.ts",
    "schemas/**/*.ts",
    "nuxt.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
