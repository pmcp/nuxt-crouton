{
  "title": {
    "type": "string",
    "meta": {
      "required": false,
      "maxLength": 255,
      "area": "main"
    }
  },
  "messages": {
    "type": "json",
    "meta": {
      "required": true,
      "area": "main",
      "description": "Array of chat messages with role, content, and timestamp"
    }
  },
  "provider": {
    "type": "string",
    "meta": {
      "required": false,
      "maxLength": 50,
      "area": "sidebar",
      "description": "AI provider used (e.g., openai, anthropic)"
    }
  },
  "model": {
    "type": "string",
    "meta": {
      "required": false,
      "maxLength": 100,
      "area": "sidebar",
      "description": "Model identifier (e.g., gpt-4o, claude-sonnet-4)"
    }
  },
  "systemPrompt": {
    "type": "text",
    "meta": {
      "required": false,
      "area": "sidebar",
      "description": "System prompt used for this conversation"
    }
  },
  "metadata": {
    "type": "json",
    "meta": {
      "required": false,
      "area": "sidebar",
      "description": "Additional metadata for the conversation"
    }
  },
  "messageCount": {
    "type": "number",
    "meta": {
      "required": false,
      "area": "sidebar",
      "description": "Cached count of messages for quick display"
    }
  },
  "lastMessageAt": {
    "type": "date",
    "meta": {
      "required": false,
      "area": "sidebar",
      "description": "Timestamp of the last message"
    }
  }
}
