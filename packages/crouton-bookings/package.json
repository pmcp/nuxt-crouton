  "keywords": [
    "nuxt",
    "nuxt-layer",
    "crouton",
    "bookings",
    "reservations",
    "scheduling"
  ],
  "author": "FYIT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmcp/nuxt-crouton.git",
    "directory": "packages/crouton-bookings"
  },
  "bugs": {
    "url": "https://github.com/pmcp/nuxt-crouton/issues"
  },
  "homepage": "https://github.com/pmcp/nuxt-crouton#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@fyit/crouton-editor": "workspace:*"
  },
  "peerDependencies": {
    "nuxt": "^4.0.0",
    "@fyit/crouton-core": "workspace:*",
    "@nuxtjs/i18n": "^9.0.0 || ^10.0.0",
    "@internationalized/date": "^3.0.0",
    "@vueuse/core": "^11.0.0 || ^12.0.0",
    "zod": "^3.0.0",
    "@fyit/crouton-maps": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@fyit/crouton-maps": {
      "optional": true
    }
  },
  "devDependencies": {
    "@fyit/crouton-schema-designer": "workspace:*",
    "unbuild": "^3.6.1"
  }
