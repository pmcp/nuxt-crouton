{
  "name": "@fyit/crouton-bookings",
  "version": "0.1.0",
  "description": "Booking system layer for Nuxt Crouton - slot-based and inventory-based reservations",
  "type": "module",
  "main": "./nuxt.config.ts",
  "files": [
    "app",
    "server",
    "schemas",
    "i18n",
    "dist",
    "nuxt.config.ts",
    "crouton.manifest.ts",
    "README.md",
    "SCHEMAS.md"
  ],
  "exports": {
    ".": "./nuxt.config.ts",
    "./crouton.manifest": "./crouton.manifest.ts",
    "./server/utils/email-service": {
      "types": "./dist/server/utils/email-service.d.ts",
      "import": "./dist/server/utils/email-service.mjs"
    },
    "./server/utils/booking-emails": {
      "types": "./dist/server/utils/booking-emails.d.ts",
      "import": "./dist/server/utils/booking-emails.mjs"
    }
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "prepack": "pnpm build"
