{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "paths": {
      "#crouton-email/*": ["./*"],
      "#crouton-email": ["."]
    }
  },
  "include": [
    "app/**/*",
    "server/**/*",
    "types/**/*",
    "nuxt.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
