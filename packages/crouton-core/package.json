{
  "name": "@fyit/crouton-core",
  "version": "0.1.0",
  "description": "Base CRUD layer for FYIT scaffolded collections",
  "type": "module",
  "main": "./nuxt.config.ts",
  "exports": {
    ".": "./nuxt.config.ts",
    "./shared/manifest": "./shared/manifest.ts",
    "./app/composables/*": {
      "types": "./dist/app/composables/*.d.ts",
      "import": "./dist/app/composables/*.mjs"
    },
    "./server/database/schema/*": {
      "types": "./dist/server/database/schema/*.d.ts",
      "import": "./dist/server/database/schema/*.mjs"
    }
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "prepack": "pnpm build",
    "sync-stub": "tsx scripts/sync-stub.ts",
    "sync-stub:fix": "tsx scripts/sync-stub.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "app",
    "server",
    "shared",
    "registry",
    "dist",
    "nuxt.config.ts",
    "crouton-team-auth.d.ts",
    "crouton-hooks.d.ts"
  ],
  "keywords": [
    "nuxt",
    "nuxt-layer",
    "crouton",
    "scaffolding"
  ],
  "author": "FYIT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmcp/nuxt-crouton.git",
    "directory": "packages/crouton-core"
  },
  "bugs": {
    "url": "https://github.com/pmcp/nuxt-crouton/issues"
  },
  "homepage": "https://github.com/pmcp/nuxt-crouton#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@fyit/crouton-admin": "workspace:*",
    "@fyit/crouton-auth": "workspace:*",
    "@fyit/crouton-i18n": "workspace:*",
    "@libsql/client": "^0.15.0",
    "@nuxt/image": "^1.11.0",
    "@nuxt/ui": "^4.3.0",
    "@nuxtjs/seo": "^3.3.0",
    "@vueuse/core": "^13.3.0",
    "@vueuse/integrations": "^13.3.0",
    "@vueuse/nuxt": "^13.3.0",
    "cropperjs": "^2.1.0",
    "papaparse": "^5.5.3",
    "sortablejs": "^1.15.6"
  },
  "peerDependencies": {
    "nuxt": "^4.0.0"
  },
  "devDependencies": {
    "@fyit/crouton-cli": "workspace:*",
    "@types/papaparse": "^5.5.2",
    "@types/sortablejs": "^1.15.8",
    "@vitest/coverage-v8": "^2.1.9",
    "happy-dom": "^16.6.0",
    "tsx": "^4.19.2",
    "unbuild": "^3.6.1",
    "vitest": "^2.1.0"
  }
}
