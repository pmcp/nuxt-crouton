{
  "name": "pages",
  "label": "Pages",
  "icon": "i-lucide-file-text",
  "description": "CMS pages with support for page types from app packages",
  "hierarchy": {
    "enabled": true,
    "parentField": "parentId",
    "orderField": "order",
    "pathField": "path",
    "depthField": "depth"
  },
  "fields": [
    {
      "name": "title",
      "type": "string",
      "label": "Title",
      "required": true,
      "maxLength": 200,
      "area": "main"
    },
    {
      "name": "slug",
      "type": "string",
      "label": "URL Slug",
      "required": true,
      "maxLength": 200,
      "unique": true,
      "area": "main",
      "description": "URL-friendly identifier (e.g., \"about-us\")"
    },
    {
      "name": "pageType",
      "type": "string",
      "label": "Page Type",
      "required": true,
      "default": "core:regular",
      "maxLength": 100,
      "area": "meta",
      "description": "Format: appId:pageTypeId (e.g., \"bookings:calendar\")"
    },
    {
      "name": "content",
      "type": "text",
      "label": "Content",
      "area": "main",
      "component": "CroutonEditorSimple",
      "description": "Rich text content for regular pages"
    },
    {
      "name": "config",
      "type": "json",
      "label": "Page Configuration",
      "area": "meta",
      "description": "Type-specific settings for app pages"
    },
    {
      "name": "status",
      "type": "string",
      "label": "Status",
      "required": true,
      "default": "draft",
      "maxLength": 20,
      "area": "sidebar",
      "options": [
        { "value": "draft", "label": "Draft" },
        { "value": "published", "label": "Published" },
        { "value": "archived", "label": "Archived" }
      ]
    },
    {
      "name": "visibility",
      "type": "string",
      "label": "Visibility",
      "required": true,
      "default": "public",
      "maxLength": 20,
      "area": "sidebar",
      "options": [
        { "value": "public", "label": "Public" },
        { "value": "members", "label": "Members Only" },
        { "value": "hidden", "label": "Hidden (Direct Link)" }
      ]
    },
    {
      "name": "publishedAt",
      "type": "date",
      "label": "Published At",
      "area": "sidebar"
    },
    {
      "name": "showInNavigation",
      "type": "boolean",
      "label": "Show in Navigation",
      "default": true,
      "area": "sidebar"
    },
    {
      "name": "layout",
      "type": "string",
      "label": "Layout",
      "default": "default",
      "maxLength": 20,
      "area": "sidebar",
      "options": [
        { "value": "default", "label": "Default (Scrollable)" },
        { "value": "full-height", "label": "Full Height (Fixed)" },
        { "value": "full-screen", "label": "Full Screen (No Padding)" }
      ],
      "description": "Controls how the page content fills the viewport"
    },
    {
      "name": "seoTitle",
      "type": "string",
      "label": "SEO Title",
      "maxLength": 60,
      "area": "meta",
      "description": "Override page title for search engines"
    },
    {
      "name": "seoDescription",
      "type": "string",
      "label": "SEO Description",
      "maxLength": 160,
      "area": "meta",
      "description": "Meta description for search engines"
    },
    {
      "name": "ogImage",
      "type": "string",
      "label": "Social Image",
      "maxLength": 500,
      "area": "meta",
      "description": "Image shown when page is shared on social media"
    },
    {
      "name": "robots",
      "type": "string",
      "label": "Search Engine Indexing",
      "default": "index",
      "maxLength": 50,
      "area": "meta",
      "options": [
        { "value": "index", "label": "Allow indexing" },
        { "value": "noindex", "label": "No indexing" }
      ],
      "description": "Controls whether search engines index this page"
    }
  ]
}