{
  "title": {
    "type": "string",
    "translatable": true,
    "meta": {
      "required": true,
      "label": "Title",
      "maxLength": 200,
      "area": "main"
    }
  },
  "slug": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "URL Slug",
      "maxLength": 200,
      "unique": true,
      "area": "main",
      "description": "URL-friendly identifier (e.g., \"about-us\")"
    }
  },
  "pageType": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Page Type",
      "default": "pages:regular",
      "maxLength": 100,
      "area": "meta",
      "description": "Format: appId:pageTypeId (e.g., \"bookings:calendar\")"
    }
  },
  "content": {
    "type": "text",
    "translatable": true,
    "meta": {
      "label": "Content",
      "area": "main",
      "component": "CroutonEditorSimple",
      "description": "Rich text content for regular pages"
    }
  },
  "config": {
    "type": "json",
    "meta": {
      "label": "Page Configuration",
      "area": "meta",
      "description": "Type-specific settings for app pages"
    }
  },
  "status": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Status",
      "default": "draft",
      "maxLength": 20,
      "area": "sidebar"
    }
  },
  "visibility": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Visibility",
      "default": "public",
      "maxLength": 20,
      "area": "sidebar"
    }
  },
  "publishedAt": {
    "type": "date",
    "meta": {
      "label": "Published At",
      "area": "sidebar"
    }
  },
  "showInNavigation": {
    "type": "boolean",
    "meta": {
      "label": "Show in Navigation",
      "default": true,
      "area": "sidebar"
    }
  },
  "seoTitle": {
    "type": "string",
    "translatable": true,
    "meta": {
      "label": "SEO Title",
      "maxLength": 60,
      "area": "meta",
      "description": "Override page title for search engines"
    }
  },
  "seoDescription": {
    "type": "string",
    "translatable": true,
    "meta": {
      "label": "SEO Description",
      "maxLength": 160,
      "area": "meta",
      "description": "Meta description for search engines"
    }
  },
  "translations": {
    "type": "json",
    "meta": {
      "label": "Translations",
      "area": "meta"
    }
  }
}
