{
  "id": { "type": "uuid", "meta": { "primaryKey": true } },
  "name": { "type": "string", "meta": { "required": true, "maxLength": 200 } },
  "description": { "type": "text" },
  "status": {
    "type": "enum",
    "meta": {
      "options": ["planning", "active", "on-hold", "completed", "archived"],
      "default": "planning"
    }
  },
  "priority": {
    "type": "enum",
    "meta": {
      "options": ["low", "medium", "high", "critical"],
      "default": "medium"
    }
  },
  "startDate": { "type": "date" },
  "dueDate": { "type": "date" },
  "color": { "type": "string", "meta": { "maxLength": 20 } }
}