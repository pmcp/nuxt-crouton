{
  "id": { "type": "uuid", "meta": { "primaryKey": true } },
  "title": { "type": "string", "meta": { "required": true, "maxLength": 200 } },
  "content": { "type": "richtext" },
  "category": {
    "type": "enum",
    "meta": {
      "options": ["general", "meeting", "idea", "reference", "todo"],
      "default": "general"
    }
  },
  "tags": { "type": "json" },
  "isPinned": { "type": "boolean", "meta": { "default": false } }
}