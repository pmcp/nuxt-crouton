{
  "title": {
    "type": "string",
    "meta": {
      "required": false,
      "translatable": true,
      "label": "Title",
      "maxLength": 200,
      "area": "main"
    }
  },
  "slug": {
    "type": "string",
    "meta": {
      "required": false,
      "translatable": true,
      "label": "URL Slug",
      "maxLength": 200,
      "unique": true,
      "area": "main",
      "help": "URL-friendly identifier (e.g., 'about-us')"
    }
  },
  "pageType": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Page Type",
      "default": "core:regular",
      "maxLength": 100,
      "area": "meta",
      "help": "Format: appId:pageTypeId (e.g., 'bookings:calendar')"
    }
  },
  "content": {
    "type": "text",
    "meta": {
      "translatable": true,
      "label": "Content",
      "area": "main",
      "component": "CroutonEditorSimple",
      "help": "Rich text content for regular pages"
    }
  },
  "config": {
    "type": "json",
    "meta": {
      "label": "Page Configuration",
      "area": "meta",
      "help": "Type-specific settings for app pages"
    }
  },
  "status": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Status",
      "default": "draft",
      "maxLength": 20,
      "area": "sidebar",
      "options": [
        { "value": "draft", "label": "Draft" },
        { "value": "published", "label": "Published" },
        { "value": "archived", "label": "Archived" }
      ]
    }
  },
  "visibility": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Visibility",
      "default": "public",
      "maxLength": 20,
      "area": "sidebar",
      "options": [
        { "value": "public", "label": "Public" },
        { "value": "members", "label": "Members Only" },
        { "value": "hidden", "label": "Hidden (Direct Link)" }
      ]
    }
  },
  "publishedAt": {
    "type": "date",
    "meta": {
      "label": "Published At",
      "area": "sidebar"
    }
  },
  "showInNavigation": {
    "type": "boolean",
    "meta": {
      "label": "Show in Navigation",
      "default": true,
      "area": "sidebar"
    }
  },
  "layout": {
    "type": "string",
    "meta": {
      "label": "Layout",
      "default": "default",
      "maxLength": 20,
      "area": "sidebar",
      "options": [
        { "value": "default", "label": "Default (Scrollable)" },
        { "value": "full-height", "label": "Full Height (Fixed)" },
        { "value": "full-screen", "label": "Full Screen (No Padding)" }
      ],
      "help": "Controls how the page content fills the viewport"
    }
  },
  "seoTitle": {
    "type": "string",
    "meta": {
      "translatable": true,
      "label": "SEO Title",
      "maxLength": 60,
      "area": "meta",
      "help": "Override page title for search engines"
    }
  },
  "seoDescription": {
    "type": "string",
    "meta": {
      "translatable": true,
      "label": "SEO Description",
      "maxLength": 160,
      "area": "meta",
      "help": "Meta description for search engines"
    }
  }
}
