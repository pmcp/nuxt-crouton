{
  "sourceType": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Source Type",
      "description": "figma, slack, etc.",
      "area": "main",
      "group": "basic"
    }
  },
  "sourceWorkspaceId": {
    "type": "string",
    "meta": {
      "required": true,
      "default": "",
      "label": "Source Workspace ID",
      "description": "Slack team ID, Figma org ID (prevents user ID collisions across workspaces)",
      "area": "main",
      "group": "basic"
    }
  },
  "sourceUserId": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Source User ID",
      "description": "User ID from source system (Slack user ID, Figma email, etc.)",
      "area": "main",
      "group": "basic"
    }
  },
  "sourceUserEmail": {
    "type": "string",
    "meta": {
      "label": "Source User Email",
      "description": "Email address from source system (if available)",
      "area": "main",
      "group": "basic"
    }
  },
  "sourceUserName": {
    "type": "string",
    "meta": {
      "label": "Source User Name",
      "description": "Display name from source system",
      "area": "main",
      "group": "basic"
    }
  },
  "notionUserId": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Notion User ID",
      "description": "UUID of the Notion user to map to",
      "area": "main",
      "group": "notion"
    }
  },
  "notionUserName": {
    "type": "string",
    "meta": {
      "label": "Notion User Name",
      "description": "Display name of the Notion user (cached)",
      "area": "main",
      "group": "notion"
    }
  },
  "notionUserEmail": {
    "type": "string",
    "meta": {
      "label": "Notion User Email",
      "description": "Email of the Notion user (cached)",
      "area": "main",
      "group": "notion"
    }
  },
  "mappingType": {
    "type": "string",
    "meta": {
      "required": true,
      "default": "manual",
      "label": "Mapping Type",
      "description": "manual, auto-email, auto-name, imported",
      "area": "sidebar",
      "group": "metadata"
    }
  },
  "confidence": {
    "type": "number",
    "meta": {
      "default": 1.0,
      "label": "Confidence Score",
      "description": "0-1 score for auto-mapped entries (1.0 for manual)",
      "area": "sidebar",
      "group": "metadata"
    }
  },
  "active": {
    "type": "boolean",
    "meta": {
      "required": true,
      "default": true,
      "label": "Active",
      "description": "Is this mapping currently active?",
      "area": "sidebar",
      "group": "status"
    }
  },
  "lastSyncedAt": {
    "type": "timestamp",
    "meta": {
      "label": "Last Synced At",
      "description": "Last time user info was synced from source",
      "area": "sidebar",
      "group": "metadata"
    }
  },
  "metadata": {
    "type": "json",
    "meta": {
      "label": "Additional Metadata",
      "description": "Source-specific user data (avatar, profile URL, etc.)",
      "area": "sidebar",
      "group": "metadata"
    }
  }
}