{
  "flowInputId": {
    "type": "string",
    "refTarget": "flowInputs",
    "meta": {
      "required": true,
      "label": "Flow Input",
      "description": "Which flow input received this email",
      "area": "sidebar",
      "group": "source"
    }
  },
  "messageType": {
    "type": "string",
    "meta": {
      "required": true,
      "default": "other",
      "label": "Message Type",
      "description": "account-verification, password-reset, invitation, notification, comment, other",
      "area": "sidebar",
      "group": "classification",
      "displayAs": "badge"
    }
  },
  "from": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "From",
      "description": "Sender email address",
      "area": "main",
      "group": "details"
    }
  },
  "to": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "To",
      "description": "Recipient email address",
      "area": "main",
      "group": "details"
    }
  },
  "subject": {
    "type": "string",
    "meta": {
      "required": true,
      "maxLength": 500,
      "label": "Subject",
      "description": "Email subject line",
      "area": "main",
      "group": "details"
    }
  },
  "htmlBody": {
    "type": "text",
    "meta": {
      "label": "HTML Body",
      "description": "Email HTML content",
      "area": "main",
      "group": "content"
    }
  },
  "textBody": {
    "type": "text",
    "meta": {
      "label": "Text Body",
      "description": "Email plain text content",
      "area": "main",
      "group": "content"
    }
  },
  "receivedAt": {
    "type": "date",
    "meta": {
      "required": true,
      "label": "Received At",
      "description": "When email was received",
      "area": "sidebar",
      "group": "status"
    }
  },
  "read": {
    "type": "boolean",
    "meta": {
      "default": false,
      "label": "Read",
      "description": "Whether message has been read",
      "area": "sidebar",
      "group": "status"
    }
  },
  "forwardedTo": {
    "type": "string",
    "meta": {
      "label": "Forwarded To",
      "description": "Email address message was forwarded to",
      "area": "sidebar",
      "group": "forwarding"
    }
  },
  "forwardedAt": {
    "type": "date",
    "meta": {
      "label": "Forwarded At",
      "description": "When message was forwarded",
      "area": "sidebar",
      "group": "forwarding"
    }
  },
  "resendEmailId": {
    "type": "string",
    "meta": {
      "label": "Resend Email ID",
      "description": "Resend API email identifier",
      "area": "sidebar",
      "group": "debug"
    }
  }
}
