{
  "id": {
    "type": "uuid",
    "meta": {
      "primaryKey": true
    }
  },
  "title": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Title",
      "maxLength": 200
    }
  },
  "slug": {
    "type": "string",
    "meta": {
      "required": true,
      "unique": true,
      "label": "URL Slug"
    }
  },
  "content": {
    "type": "text",
    "meta": {
      "required": true,
      "label": "Content"
    }
  },
  "excerpt": {
    "type": "text",
    "meta": {
      "label": "Excerpt",
      "maxLength": 500
    }
  },
  "authorId": {
    "type": "uuid",
    "refTarget": "authors",
    "meta": {
      "required": true,
      "label": "Author"
    }
  },
  "featuredImage": {
    "type": "string",
    "meta": {
      "label": "Featured Image URL"
    }
  },
  "status": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Status",
      "default": "draft"
    }
  },
  "publishedAt": {
    "type": "date",
    "meta": {
      "label": "Published Date"
    }
  },
  "tags": {
    "type": "json",
    "meta": {
      "label": "Tags"
    }
  },
  "metaDescription": {
    "type": "string",
    "meta": {
      "label": "SEO Description",
      "maxLength": 160
    }
  }
}