{
  "id": {
    "type": "uuid",
    "meta": {
      "primaryKey": true
    }
  },
  "orderNumber": {
    "type": "string",
    "meta": {
      "required": true,
      "unique": true,
      "label": "Order Number"
    }
  },
  "customerId": {
    "type": "uuid",
    "refTarget": "users",
    "meta": {
      "required": true,
      "label": "Customer"
    }
  },
  "status": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Status",
      "default": "pending"
    }
  },
  "totalAmount": {
    "type": "decimal",
    "meta": {
      "required": true,
      "precision": 10,
      "scale": 2,
      "label": "Total Amount"
    }
  },
  "shippingAddress": {
    "type": "json",
    "meta": {
      "label": "Shipping Address"
    }
  },
  "billingAddress": {
    "type": "json",
    "meta": {
      "label": "Billing Address"
    }
  },
  "notes": {
    "type": "text",
    "meta": {
      "label": "Order Notes"
    }
  },
  "paidAt": {
    "type": "date",
    "meta": {
      "label": "Payment Date"
    }
  },
  "shippedAt": {
    "type": "date",
    "meta": {
      "label": "Shipped Date"
    }
  },
  "deliveredAt": {
    "type": "date",
    "meta": {
      "label": "Delivery Date"
    }
  }
}