{
  "id": {
    "type": "uuid",
    "meta": {
      "primaryKey": true
    }
  },
  "name": {
    "type": "string",
    "meta": {
      "required": true,
      "unique": true,
      "label": "Role Name",
      "maxLength": 50
    }
  },
  "description": {
    "type": "text",
    "meta": {
      "label": "Description"
    }
  },
  "permissions": {
    "type": "json",
    "meta": {
      "label": "Permissions",
      "helpText": "JSON array of permission IDs"
    }
  },
  "isSystem": {
    "type": "boolean",
    "meta": {
      "label": "System Role",
      "helpText": "System roles cannot be deleted",
      "default": false
    }
  },
  "priority": {
    "type": "integer",
    "meta": {
      "label": "Priority",
      "helpText": "Higher priority takes precedence",
      "default": 0
    }
  }
