{
  "id": {
    "type": "uuid",
    "meta": {
      "primaryKey": true
    }
  },
  "postId": {
    "type": "uuid",
    "refTarget": "posts",
    "meta": {
      "required": true,
      "label": "Post"
    }
  },
  "authorName": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Author Name",
      "maxLength": 100
    }
  },
  "authorEmail": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Author Email"
    }
  },
  "content": {
    "type": "text",
    "meta": {
      "required": true,
      "label": "Comment",
      "maxLength": 2000
    }
  },
  "status": {
    "type": "string",
    "meta": {
      "label": "Status",
      "default": "pending"
    }
  },
  "parentId": {
    "type": "uuid",
    "refTarget": "comments",
    "meta": {
      "label": "Parent Comment",
      "helpText": "For threaded comments"
    }
  },
  "isSpam": {
    "type": "boolean",
    "meta": {
      "label": "Marked as Spam",
      "default": false
    }
  }
}