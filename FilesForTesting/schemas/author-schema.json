{
  "id": {
    "type": "uuid",
    "meta": {
      "primaryKey": true
    }
  },
  "name": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Name",
      "maxLength": 100
    }
  },
  "email": {
    "type": "string",
    "meta": {
      "required": true,
      "unique": true,
      "label": "Email"
    }
  },
  "bio": {
    "type": "text",
    "meta": {
      "label": "Biography",
      "maxLength": 1000
    }
  },
  "avatar": {
    "type": "string",
    "meta": {
      "label": "Avatar URL"
    }
  },
  "website": {
    "type": "string",
    "meta": {
      "label": "Website"
    }
  },
  "socialLinks": {
    "type": "json",
    "meta": {
      "label": "Social Media Links"
    }
  },
  "isActive": {
    "type": "boolean",
    "meta": {
      "label": "Active",
      "default": true
    }
  }
}