{
  "id": {
    "type": "uuid",
    "meta": {
      "primaryKey": true
    }
  },
  "name": {
    "type": "string",
    "meta": {
      "required": true,
      "label": "Category Name",
      "maxLength": 100
    }
  },
  "slug": {
    "type": "string",
    "meta": {
      "required": true,
      "unique": true,
      "label": "URL Slug"
    }
  },
  "description": {
    "type": "text",
    "meta": {
      "label": "Description"
    }
  },
  "parentId": {
    "type": "uuid",
    "refTarget": "categories",
    "meta": {
      "label": "Parent Category",
      "helpText": "For nested categories"
    }
  },
  "sortOrder": {
    "type": "integer",
    "meta": {
      "label": "Sort Order",
      "default": 0
    }
  },
  "isActive": {
    "type": "boolean",
    "meta": {
      "label": "Active",
      "default": true
    }
  }
}